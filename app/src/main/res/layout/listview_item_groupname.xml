<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/listview_item_groupname_scene4">

    <ImageView
        android:id="@+id/listview_item_groupname_hinhanh"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/group_gray_24" />

    <TextView
        android:id="@+id/listview_item_groupname_tennhom"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/listview_item_groupname_hinhanh"
        android:gravity="center_vertical"
        android:text="TextView" />

    <ImageView
        android:id="@+id/listview_item_groupname_hinhxoa"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/accounts_gray_24" />

</RelativeLayout>