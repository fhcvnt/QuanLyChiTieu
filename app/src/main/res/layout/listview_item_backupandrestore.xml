<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/listview_item_backupandrestore_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/file_24" />

    <TextView
        android:id="@+id/listview_item_backupandrestore_filename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="filename"
        android:textColor="#C62828"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/listview_item_backupandrestore_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/listview_item_backupandrestore_capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="capacity"
        android:textColor="#0820CC"
        app:layout_constraintBottom_toBottomOf="@+id/listview_item_backupandrestore_icon"
        app:layout_constraintStart_toEndOf="@+id/listview_item_backupandrestore_icon" />

    <TextView
        android:id="@+id/listview_item_backupandrestore_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="date"
        app:layout_constraintBottom_toBottomOf="@+id/listview_item_backupandrestore_icon"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>